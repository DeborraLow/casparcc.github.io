#scrollnekeerdown {
	position: absolute;
	z-index:999999999999;
    left:50%;
	font-family:"calluna-sans" !important;
	font-weight:300;
	width:400px;
	margin-left:-200px;
	text-align:center;
	background:url("img/arrow-down.png") bottom center no-repeat;
    top: 83vh;
    color: rgb(255, 255, 255);
	-webkit-animation: hocuspokus 15s;
    -moz-animation: hocuspokus 15s;
    -o-animation: hocuspokus 15s;
    animation: hocuspokus 15s;
    opacity: 0;
	height:125px;
}
#logoImage,
#headerImage {
	-webkit-animation: hocuspokus 5s;
    -moz-animation: hocuspokus 5s;
    -o-animation: hocuspokus 5s;
    animation: hocuspokus 5s;
    opacity: 0;
}
@keyframes hocuspokus {
    0% {
        opacity: 0;
    }
	25% {
        opacity: 0;
    }
    30% {
        opacity: 1;
    }
    45% {
        opacity: 1;
    }
    60% {
        opacity: 0;
    }
}
@-webkit-keyframes hocuspokus {
    0% {
        opacity: 0;
    }
	25% {
        opacity: 0;
    }
    30% {
        opacity: 1;
    }
    45% {
        opacity: 1;
    }
    60% {
        opacity: 0;
    }
}
@-moz-keyframes hocuspokus {
    0% {
        opacity: 0;
    }
	25% {
        opacity: 0;
    }
    30% {
        opacity: 1;
    }
    45% {
        opacity: 1;
    }
    60% {
        opacity: 0;
    }
}
@-o-keyframes hocuspokus {
    0% {
        opacity: 0;
    }
	25% {
        opacity: 0;
    }
    30% {
        opacity: 1;
    }
    45% {
        opacity: 1;
    }
    60% {
        opacity: 0;
    }
}
@keyframes hocuspokus {
    0% {
        opacity: 0;
    }
	25% {
        opacity: 0;
    }
    30% {
        opacity: 1;
    }
    45% {
        opacity: 1;
    }
    60% {
        opacity: 0;
    }
}

